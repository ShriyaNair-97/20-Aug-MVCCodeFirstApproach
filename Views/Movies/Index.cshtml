@model IEnumerable<MovieCustomerMVCAppWithAuthentication.Models.Movie> 
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movie List</h2>
<table class="table table-bordered table-striped" >
    <thead>
        <tr>
            <th>Movie Id</th>
            <th>Movie Name</th>
            <th>Movie genre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var mov in Model)
        {
        <tr>
           <td>@mov.Id</td>
           <td>@Html.ActionLink(mov.Name,"Display","Movies",new { id=mov.Id},null)</td>
            <td>@mov.genre</td>
          
        </tr>
        }
       
    </tbody>
</table>

